{
  "name": "solidity-language-server",
  "description": "A language server for Solidity language",
  "displayName": "solidity-language-server",
  "version": "0.1.0",
  "publisher": "Kodebox",
  "engines": {
    "vscode": "^1.16.0"
  },
  "categories": [
    "Languages"
  ],
  "activationEvents": [
    "onLanguage:solidity",
    "onCommand:extension.sayHello"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.sayHello",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "solidity",
        "aliases": [
          "Solidity",
          "solidity"
        ],
        "extensions": [
          ".sol"
        ],
        "configuration": "./solidity.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "solidity",
        "scopeName": "source.solidity",
        "path": "./syntaxes/solidity.json"
      }
    ]
  },
  "repository": "git@github.com:kodebox-io/solidity-language-server.git",
  "author": "Kwang Yul Seo <kseo@kodebox.io>",
  "license": "MIT",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  },
  "devDependencies": {
    "@types/jest": "^20.0.8",
    "@types/node": "^8.0.28",
    "@types/rimraf": "^2.0.2",
    "@types/temp": "^0.8.29",
    "import-sort-cli": "^3.3.0",
    "import-sort-parser-babylon": "^3.2.0",
    "import-sort-parser-typescript": "^3.2.0",
    "import-sort-style-module": "^3.0.0",
    "jest": "^21.0.2",
    "rimraf": "^2.6.2",
    "temp": "^0.8.3",
    "ts-jest": "^21.0.0",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2"
  },
  "importSort": {
    ".js, .jsx, .es6, .es": {
      "parser": "babylon",
      "style": "module"
    },
    ".ts, .tsx": {
      "parser": "typescript",
      "style": "module"
    }
  },
  "dependencies": {
    "@reactivex/rxjs": "^5.4.3",
    "@types/chalk": "^0.4.31",
    "@types/glob": "^5.0.32",
    "@types/lodash": "^4.14.74",
    "@types/mz": "^0.0.32",
    "@types/sinon": "^2.3.5",
    "chalk": "^2.1.0",
    "commander": "^2.11.0",
    "fast-json-patch": "^2.0.5",
    "glob": "^7.1.2",
    "lodash": "^4.17.4",
    "mz": "^2.7.0",
    "nodemon": "^1.12.1",
    "semaphore-async-await": "^1.5.1",
    "sinon": "^3.3.0",
    "solc": "^0.4.16",
    "solium": "^0.5.5",
    "vscode": "^1.1.5",
    "vscode-languageclient": "^3.4.3",
    "vscode-languageserver": "^3.4.2",
    "vscode-languageserver-types": "^3.4.0"
  }
}
